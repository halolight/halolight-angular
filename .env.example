# =============================================================================
# Halolight Angular 环境变量配置
# =============================================================================
# 复制此文件为 .env 并填写实际值

# API 基础 URL
NG_APP_API_URL=/api

# 是否启用 Mock 数据（true/false）
NG_APP_USE_MOCK=true

# 演示账号（仅开发/演示环境）
NG_APP_DEMO_EMAIL=admin@halolight.h7ml.cn
NG_APP_DEMO_PASSWORD=123456
NG_APP_SHOW_DEMO_HINT=true

# 应用配置
NG_APP_TITLE=Admin Pro
NG_APP_BRAND_NAME=Halolight

# 注册开关（Enable/disable new user registration，默认关闭: false）
NG_APP_ENABLE_REGISTRATION=false
